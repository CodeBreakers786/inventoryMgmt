                @Html.DropDownList("node_id", null, htmlAttributes: new { @class = "form-control col-md-5" })
                @Html.ValidationMessageFor(model => model.node_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.project_id, "project name", htmlAttributes: new { @class = "control-label col-md-2" })
